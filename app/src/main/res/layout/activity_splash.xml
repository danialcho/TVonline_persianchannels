<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/splash_txt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/vazir"
        android:text="تلوزیون آنلاین"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/splash_img_show"
        app:layout_constraintStart_toStartOf="@+id/splash_img_show"
        app:layout_constraintTop_toBottomOf="@+id/splash_img_show" />

    <TextView
        android:id="@+id/splash_txt_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/vazir"
        android:text="همیشه تلوزیون رو همراه خودت داشته باش"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/splash_txt_right"
        app:layout_constraintStart_toStartOf="@+id/splash_txt_right"
        app:layout_constraintTop_toBottomOf="@+id/splash_txt_right" />

    <ImageView
        android:id="@+id/splash_img_show"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</androidx.constraintlayout.widget.ConstraintLayout>